<?xml version="1.0" encoding="utf-8"?>
<!-- the SettingsMenuDef with two tabs defined. All other tabs are added by patches -->
<Defs>

    <XmlExtensions.SettingsMenuDef>
        <defName>TMaterials_Settings</defName> <!--Can be anything unique with no periods-->
        <modId>carnap2.TMaterials</modId> <!--MUST be the same as the one entered earlier-->
        <label>TMaterials</label> <!-- This is what displays as your mod's name-->
        <settings>
            <!--This is where you define what settings are in the settings menu-->
            <li Class="XmlExtensions.Setting.Text">
                <text>All XML Extensions settings require a restart to be applied!</text>
            </li>
<!--
            <li Class="XmlExtensions.Setting.Text">
                <text>All settings are safe to have enabled even if you don't have the appropriate mods.</text>
            </li>
-->
            <li Class="XmlExtensions.Setting.GapLine"/>

            <!--settings -->
            
            <li Class="XmlExtensions.Setting.Checkbox">
                <key>TMaterials_StoneTypes</key>
                <label>Enable custom rock types</label>
                <defaultValue>true</defaultValue>
                <tooltip>Allows stone from this mod to generate as rock types.</tooltip>
            </li>

                        
            <li Class="XmlExtensions.Setting.Checkbox">
                <key>TMaterials_StoneTypesExotic</key>
                <label>Enable custom exotic rock types</label>
                <defaultValue>true</defaultValue>
                <tooltip>Allows exotic stones from this mod to generate as rock types.</tooltip>
            </li>



        </settings>
    </XmlExtensions.SettingsMenuDef>


</Defs>